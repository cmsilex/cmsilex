{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <div class="row">
            <div>
                <table class="table table-hover table-condensed">
                    <thead>
                        <tr>
                            {% for key, column in columns %}
                                <th>
                                    {% if key matches '/^[\\d\\.]+$/' %}{{ column|title }}{% else %}{{ key|title }}{% endif %}
                                </th>
                            {% endfor %}
                        </tr>
                    </thead>
                    <tbody>
                    {% for row in rows %}
                        <tr>
                            {% for column in columns %}
                                {% if is_callable(column) %}
                                    <td>{{ call_user_func(column, row)|raw }}</td>
                                {% else %}
                                    <td>{{ attribute(row, column) }}</td>
                                {% endif %}
                            {% endfor %}
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
                <a class="btn btn-default" href="{{ url('new_page') }}">New</a>
                <a class="btn btn-default" href="{{ url('publish') }}">Publish</a>
            </div>
        </div>
    </div>

{% endblock body %}