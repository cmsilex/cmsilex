{% extends 'admin/base.html.twig' %}

{% block page_content %}
    <div>
        <table class="table table-striped table-bordered table-hover">
            <thead>
            <tr>
                {% for columnName, columnProperty in columns %}
                    <th>
                        {{- columnName -}}
                    </th>
                {% endfor %}
            </tr>
            </thead>
            <tbody>
            {% for item in items %}
                <tr>
                    {% for columnProperty in columns %}
                        <td>
                            {%- if columnProperty is callable -%}
                                {{- call_user_func(columnProperty, item)|raw -}}
                            {%- else -%}
                                {{- attribute(item, columnProperty) -}}
                            {%- endif -%}
                        </td>
                    {% endfor %}
                </tr>
            {% else %}
                <tr>
                    <td>No Items</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        <div>
            <a class="btn btn-primary" href="{{ url('edit_menu') }}">New</a>
        </div>
    </div>
{% endblock page_content %}