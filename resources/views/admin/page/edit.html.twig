{% extends "base.html.twig" %}
{% block javascripts %}
    <script src="//cdn.ckeditor.com/4.5.7/standard/ckeditor.js"></script>
    <script>
        $(function () {
            CKEDITOR.replace( 'page[content]' );

        });
    </script>
{% endblock javascripts %}
{% block styles %}
    <style>
        textarea {
            font-family: monospace;
            min-height: 30em;
        }
    </style>
{% endblock styles %}

{% block body %}
    <div class="container">
        <div class="row">
            {{ form(form) }}
        </div>
    </div>
{% endblock body %}